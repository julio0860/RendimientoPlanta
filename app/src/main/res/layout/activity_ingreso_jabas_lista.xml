<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IngresoJabas_Lista">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblListaIngresoJabas"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/lblCultivo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstIngresoJabas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnNuevoIngresoJabas"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnNuevo"
        android:id="@+id/btnNuevoIngresoJabas"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lstIngresoJabas"
        android:layout_alignEnd="@+id/lstIngresoJabas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSincronizar"
        android:id="@+id/BtnSincronizar"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnNuevoIngresoJabas"
        android:layout_toStartOf="@+id/btnNuevoIngresoJabas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESYNC"
        android:id="@+id/btnDesync"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BtnSincronizar"
        android:layout_alignLeft="@+id/BtnSincronizar"
        android:layout_alignStart="@+id/BtnSincronizar" />

    <TextView
        android:id="@+id/lblEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGRICOLA DON RICARDO"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UVA"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/lblSucursal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTADO"
        android:id="@+id/cbxEstado"
        android:checked="true"
        android:textSize="12dp"
        android:layout_below="@+id/lblFecha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYNC"
        android:id="@+id/cbxSync"
        android:checked="true"
        android:textSize="12dp"
        android:layout_alignTop="@+id/cbxEstado"
        android:layout_toLeftOf="@+id/cbxEstado"
        android:layout_toStartOf="@+id/cbxEstado" />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHA"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BtnSincronizar"
        android:layout_toEndOf="@+id/BtnSincronizar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbConfigurar"
        android:src="@android:drawable/ic_menu_manage"
        android:layout_alignTop="@+id/imbRegresar"
        android:layout_toRightOf="@+id/imbRegresar"
        android:layout_toEndOf="@+id/imbRegresar" />

    <TextView
        android:id="@+id/lblSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLANTA DON CARLOS"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/cbxSync"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbRegresar"
        android:layout_row="0"
        android:layout_column="6"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_alignBottom="@+id/BtnSincronizar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
