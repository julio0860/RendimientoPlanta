<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adr.rendimientoplanta.IngresoJabas_Grilla">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbSincroRapida"
        android:src="@android:drawable/presence_online"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblFecha"
        android:enabled="false"
        android:inputType="date"
        android:layout_columnSpan="4"
        android:text="01/01/1900"
        android:textColor="#000000"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblLinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una linea"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView14" />


    <TextView
        android:id="@+id/lblSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLANTA YANCAY"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView6"
        android:background="#000000"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/lblLinea"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADR"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UVA"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toStartOf="@+id/lblFecha"
        android:layout_marginEnd="58dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dgvLineas"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imbRegresar"
        android:numColumns="2"
        android:fastScrollEnabled="false"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSincronizar"
        android:id="@+id/btnSincronizar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/lblFecha" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView13"
        android:background="#000000"
        android:baselineAlignBottom="false"
        android:layout_above="@+id/btnSincronizar"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imageView14"
        android:background="#000000"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/lblFecha"
        android:layout_alignEnd="@+id/lblFecha"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbRegresar"
        android:layout_row="0"
        android:layout_column="6"
        android:src="@android:drawable/ic_menu_revert"
        android:visibility="invisible"
        android:layout_below="@+id/imageView13"
        android:layout_alignRight="@+id/lblSucursal"
        android:layout_alignEnd="@+id/lblSucursal"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbConfigurar"
        android:src="@android:drawable/ic_menu_manage"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/lblEmpresa"
        android:layout_toEndOf="@+id/lblEmpresa" />

</RelativeLayout>
